<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Panel.ViewModels"
             x:Class="Panel.Views.WidgetPage"
             BackgroundColor="Transparent"
             Title="Widget">

    <!-- Contenedor flotante del widget mejorado -->
    <Border BackgroundColor="White" 
            Stroke="#E5E7EB"
            StrokeThickness="1"
            StrokeShape="RoundRectangle 16"
            Padding="0"
            Margin="8"
            HorizontalOptions="Fill"
            VerticalOptions="Fill">
        <Border.Shadow>
            <Shadow Brush="Black" Offset="0,6" Radius="16" Opacity="0.12"/>
        </Border.Shadow>

        <Grid RowDefinitions="Auto,Auto,*,Auto" RowSpacing="0">
            <!-- Encabezado con logo de empresa -->
            <Border Grid.Row="0" BackgroundColor="#F8FAFC" StrokeThickness="0" Padding="12,10">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <!-- Logo de la empresa -->
                    <Border Grid.Column="0" HeightRequest="40" WidthRequest="40" StrokeShape="RoundRectangle 8" 
                            StrokeThickness="0" BackgroundColor="Transparent">
                        <Image Source="logoconsultoria.jpg" HeightRequest="38" WidthRequest="38" Aspect="AspectFill"/>
                    </Border>
                    
                    <VerticalStackLayout Grid.Column="1" Margin="10,0,0,0" VerticalOptions="Center" Spacing="1">
                        <Label Text="{Binding NombreContador}" FontSize="13" FontAttributes="Bold" 
                               LineBreakMode="TailTruncation" TextColor="#1F2937"/>
                        <HorizontalStackLayout Spacing="4">
                            <Ellipse WidthRequest="6" HeightRequest="6" Fill="#10B981" VerticalOptions="Center"/>
                            <Label Text="En lÃ­nea" FontSize="9" TextColor="#6B7280"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <!-- BotÃ³n expandir -->
                    <Border Grid.Column="2" BackgroundColor="#EEF2FF" StrokeShape="RoundRectangle 8" 
                            HeightRequest="32" WidthRequest="32" StrokeThickness="0">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnOpenSystemClicked"/>
                        </Border.GestureRecognizers>
                        <Path Data="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" 
                              Stroke="#4F46E5" StrokeThickness="1.5" WidthRequest="14" HeightRequest="14"
                              Aspect="Uniform" HorizontalOptions="Center" VerticalOptions="Center"/>
                    </Border>
                </Grid>
            </Border>
            
            <!-- Mini estadÃ­sticas compactas -->
            <Grid Grid.Row="1" ColumnDefinitions="*,*,*" Padding="8,8" BackgroundColor="White">
                <VerticalStackLayout HorizontalOptions="Center" Spacing="1">
                    <Label Text="{Binding TareasPendientesCount}" FontSize="18" FontAttributes="Bold" TextColor="#F59E0B" HorizontalOptions="Center"/>
                    <Label Text="Pendientes" FontSize="8" TextColor="#9CA3AF" HorizontalOptions="Center"/>
                </VerticalStackLayout>
                <BoxView Grid.Column="0" WidthRequest="1" Color="#E5E7EB" HorizontalOptions="End" VerticalOptions="Fill" Margin="0,4"/>
                
                <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center" Spacing="1">
                    <Label Text="{Binding TareasCompletadas}" FontSize="18" FontAttributes="Bold" TextColor="#10B981" HorizontalOptions="Center"/>
                    <Label Text="Completadas" FontSize="8" TextColor="#9CA3AF" HorizontalOptions="Center"/>
                </VerticalStackLayout>
                <BoxView Grid.Column="1" WidthRequest="1" Color="#E5E7EB" HorizontalOptions="End" VerticalOptions="Fill" Margin="0,4"/>
                
                <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center" Spacing="1">
                    <Label Text="{Binding TareasVencidas}" FontSize="18" FontAttributes="Bold" TextColor="#EF4444" HorizontalOptions="Center"/>
                    <Label Text="Vencidas" FontSize="8" TextColor="#9CA3AF" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Grid>
            
            <!-- Separador -->
            <BoxView Grid.Row="1" HeightRequest="1" Color="#E5E7EB" VerticalOptions="End"/>

            <!-- Lista de tareas pendientes - ocupa el espacio restante -->
            <CollectionView Grid.Row="2" ItemsSource="{Binding TareasPendientes}" 
                            VerticalOptions="Fill" HorizontalOptions="Fill">
                <CollectionView.EmptyView>
                    <!-- Vista vacÃ­a centrada con diseÃ±o mejorado -->
                    <Grid HorizontalOptions="Fill" VerticalOptions="Fill">
                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                            <Border HeightRequest="48" WidthRequest="48" StrokeShape="RoundRectangle 24" 
                                    BackgroundColor="#D1FAE5" StrokeThickness="0" HorizontalOptions="Center">
                                <Path Data="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" 
                                      Stroke="#10B981" StrokeThickness="2" WidthRequest="24" HeightRequest="24"
                                      Aspect="Uniform" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </Border>
                            <Label Text="Â¡Todo listo!" FontSize="14" FontAttributes="Bold" TextColor="#059669" HorizontalOptions="Center"/>
                            <Label Text="No tienes tareas pendientes" FontSize="11" TextColor="#6B7280" HorizontalOptions="Center"/>
                            <Label Text="Â¡Excelente trabajo! ðŸŽ‰" FontSize="10" TextColor="#9CA3AF" HorizontalOptions="Center"/>
                        </VerticalStackLayout>
                    </Grid>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="Auto,*" Padding="10,6">
                            <!-- Checkbox estilizado -->
                            <Border HeightRequest="20" WidthRequest="20" StrokeShape="RoundRectangle 5" 
                                    Stroke="#D1D5DB" StrokeThickness="1.5" BackgroundColor="White"
                                    VerticalOptions="Center">
                                <CheckBox IsChecked="{Binding Estado, Converter={StaticResource StatusToBoolConverter}, Mode=OneWay}" 
                                          Color="{StaticResource Blue500}"
                                          CheckedChanged="OnTareaCheckedChanged"
                                          HorizontalOptions="Center" VerticalOptions="Center"
                                          Scale="0.75"/>
                            </Border>
                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="1" Margin="8,0,0,0">
                                <Label Text="{Binding Titulo}" FontSize="12" FontAttributes="Bold" TextColor="#374151" LineBreakMode="TailTruncation"/>
                                <HorizontalStackLayout Spacing="4">
                                    <Path Data="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5" 
                                          Stroke="#9CA3AF" StrokeThickness="1" WidthRequest="10" HeightRequest="10" Aspect="Uniform" VerticalOptions="Center"/>
                                    <Label Text="{Binding FechaVencimiento, StringFormat='{0:dd MMM}'}" FontSize="9" TextColor="#9CA3AF" VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            <!-- Footer con hora de actualizaciÃ³n -->
            <Border Grid.Row="3" BackgroundColor="#F9FAFB" StrokeThickness="0" Padding="10,6">
                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                    <Path Data="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" 
                          Stroke="#9CA3AF" StrokeThickness="1" WidthRequest="10" HeightRequest="10" Aspect="Uniform" VerticalOptions="Center"/>
                    <Label Text="{Binding FechaHora, StringFormat='Actualizado: {0:HH:mm}'}" 
                           FontSize="9" TextColor="#9CA3AF" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>
        </Grid>
    </Border>
</ContentPage>
