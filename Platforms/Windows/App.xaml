<maui:MauiWinUIApplication
    x:Class="Panel.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maui="using:Microsoft.Maui"
    xmlns:local="using:Panel.WinUI">

    <maui:MauiWinUIApplication.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="ScrollBarThumbFill" Color="Black" />
                    <SolidColorBrush x:Key="ScrollBarThumbFillPointerOver" Color="Black" />
                    <SolidColorBrush x:Key="ScrollBarThumbFillPressed" Color="Black" />
                    <SolidColorBrush x:Key="ScrollBarThumbFillDisabled" Color="Black" />
                    
                    <SolidColorBrush x:Key="ScrollingIndicatorThumbFill" Color="Black" />
                    <SolidColorBrush x:Key="ScrollingIndicatorThumbFillPointerOver" Color="Black" />
                    <SolidColorBrush x:Key="ScrollingIndicatorThumbFillPressed" Color="Black" />

                    <x:Double x:Key="ScrollBarSize">16</x:Double>
                    <x:Double x:Key="ScrollBarThumbMinSize">40</x:Double>

                    <SolidColorBrush x:Key="ScrollBarTrackFill" Color="#FFE0E0E0" />
                    <SolidColorBrush x:Key="ScrollBarTrackFillPointerOver" Color="#FFD0D0D0" />
                    <SolidColorBrush x:Key="ScrollBarTrackFillPressed" Color="#FFC0C0C0" />
                    <SolidColorBrush x:Key="ScrollBarTrackFillDisabled" Color="#FFF0F0F0" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <SolidColorBrush x:Key="ScrollBarThumbFill" Color="Black" />
                    <SolidColorBrush x:Key="ScrollBarThumbFillPointerOver" Color="Black" />
                    <SolidColorBrush x:Key="ScrollBarThumbFillPressed" Color="Black" />
                    <SolidColorBrush x:Key="ScrollBarThumbFillDisabled" Color="Black" />
                    
                    <SolidColorBrush x:Key="ScrollingIndicatorThumbFill" Color="Black" />
                    <SolidColorBrush x:Key="ScrollingIndicatorThumbFillPointerOver" Color="Black" />
                    <SolidColorBrush x:Key="ScrollingIndicatorThumbFillPressed" Color="Black" />

                    <x:Double x:Key="ScrollBarSize">16</x:Double>
                    <x:Double x:Key="ScrollBarThumbMinSize">40</x:Double>

                    <SolidColorBrush x:Key="ScrollBarTrackFill" Color="#FFE0E0E0" />
                    <SolidColorBrush x:Key="ScrollBarTrackFillPointerOver" Color="#FFD0D0D0" />
                    <SolidColorBrush x:Key="ScrollBarTrackFillPressed" Color="#FFC0C0C0" />
                    <SolidColorBrush x:Key="ScrollBarTrackFillDisabled" Color="#FFF0F0F0" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </maui:MauiWinUIApplication.Resources>
</maui:MauiWinUIApplication>
